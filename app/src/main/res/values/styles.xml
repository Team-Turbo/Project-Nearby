<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="android:Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">@color/theme_bg</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/theme_txt</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText"
        parent="android:Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/theme_txt</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs"
        parent="android:Widget.Holo.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@color/theme_bg_darker</item>
    </style>

    <style name="boldText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="normalText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#33B5E5</item>
    </style>

    <!-- Category UI elements styles -->

    <style name="catui_identifier">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/catui_txtSize</item>
    </style>

    <style name="catui_edittext_text">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ff1e1e1e</item>
        <item name="android:textSize">@dimen/catui_txtSize</item>
    </style>

</resources>
